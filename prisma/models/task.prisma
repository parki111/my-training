enum Status {
  Incomplete
  Complete
  InProgress
}

model Task {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user          User      @relation(fields: [userId], references: [id])
  userId        String
  title         String
  description   String?
  status        Status    @default(Incomplete)
  completedDate DateTime?
}
